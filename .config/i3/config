# Please see https://i3wm.org/docs/userguide.html for a complete reference!

exec_always --no-startup-id feh --bg-center ~/Pictures/wallpaper_dragonBall.jpg
exec_always --no-startup-id picom --config ~/.config/compton.conf

# Default mod key
set $mod Mod4
set $alt Mod1

# Borders
default_floating_border pixel 2
default_border pixel 2

# Title position
title_align center

# Gaps
gaps inner 4
gaps outer 4

# no sloppy focus
focus_follows_mouse no

# Font for window titles. Will also be used by the bar unless a different font is used in the bar {} block below.
font pango:monospace 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec --no-startup-id alacritty

# kill focused window
bindsym $mod+q kill

# kill all windows in one workspace
bindsym $mod+Shift+q focus parent; kill

# Telegram
bindsym $mod+t exec --no-startup-id telegram-desktop

# Firefox
bindsym $mod+a exec --no-startup-id firefox

# Spotify
bindsym $mod+s exec --no-startup-id spotify

# GUI file manager
bindsym $mod+Shift+f exec --no-startup-id nautilus

# Terminal file manager
bindsym $mod+r exec --no-startup-id alacritty -e ranger

# Screenshots
bindsym Print exec --no-startup-id xfce4-screenshooter -f -c # Fullscreen screenshot
bindsym Ctrl+Print exec --no-startup-id xfce4-screenshooter -r -c # Area screenshot
bindsym $alt+Print exec --no-startup-id xfce4-screenshooter -w -c # Focused window screenshot

# Appfinder
bindsym $mod+d exec --no-startup-id xfce4-appfinder

# Display settings
bindsym $mod+p exec --no-startup-id xfce4-display-settings --minimal

# Lock screen
bindsym $mod+Escape exec --no-startup-id xflock4

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Ctrl+h move left
bindsym $mod+Ctrl+j move down
bindsym $mod+Ctrl+k move up
bindsym $mod+Ctrl+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Ctrl+Left move left
bindsym $mod+Ctrl+Down move down
bindsym $mod+Ctrl+Up move up
bindsym $mod+Ctrl+Right move right

# toggle the split direction
bindsym $mod+z split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
#bindsym $mod+s layout stacking
#bindsym $mod+w layout tabbed
#bindsym $mod+e layout toggle split
bindsym $mod+m layout toggle tabbed split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle #???

# focus the parent container
#bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# cicle through tabs in tabbed layout
bindsym $alt+Tab focus right
bindsym $alt+Shift+Tab focus left

# move focused container to other screens
bindsym $mod+$alt+Left move container to output left
bindsym $mod+$alt+Right move container to output right

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Move workspace to other monitors
bindsym $mod+$alt+Ctrl+Left move workspace to output left
bindsym $mod+$alt+Ctrl+Right move workspace to output right

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

bindsym $mod+Shift+h resize grow width 30 px
bindsym $mod+Shift+j resize grow height 30 px 
#or 10 ppt
bindsym $mod+Shift+k resize shrink height 30 px 
#or 10 ppt
bindsym $mod+Shift+l resize shrink width 30 px

bindsym $mod+Shift+Left resize grow width 30 px
bindsym $mod+Shift+Down resize shrink height 30 px
bindsym $mod+Shift+Up resize grow height 30 px
bindsym $mod+Shift+Right resize shrink width 30px

# Colors
# https://i3wm.org/docs/userguide.html#_changing_colors
# class                 border  backgr. text    indicator child_border
client.focused          #4c7899 #285577 #ffffff #2e9ef4   #285577
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #ffffff
